@using EmptyTest.Models.Requests.Auth
@model SignInRequest

<div class="w-50 mx-auto">
    <div class="text-center mt-3">
        <img src="~/img/account.svg" alt="account-image" width="10%" height="10%"/>
        <h2>Documentario</h2>
        <p>Sign In and start creating creative courses and documents!</p>
        <hr />
    </div>
    <form method="post" action="/Auth/SignIn?RedirectUrl=@ViewData["RedirectUrl"]"  >
        <div class="form-group mt-3">
            <div class="row">
                <div class="col-2">
                    <label class="form-label" asp-for="Email">Email</label>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="Email" />
                </div>
            </div>
            <div class="row">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group mt-3">
            <div class="row">
                <div class="col-2">
                    <label class="form-label" asp-for="Password">Password</label>
                </div>
                <div class="col">
                    <input class="form-control" asp-for="Password" type="password"/>
                </div>
            </div>
            <div class="row">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
        </div>
        @if (ViewData["SignInError"] is not null)
        {
            <div class="form-group mt-3 text-center">
                <span class="text-danger">@ViewData["SignInError"]</span>
            </div>
        }
        <div class="form-group mt-3" style="text-align: right;">
            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>
    </form>
</div>