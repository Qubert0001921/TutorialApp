@model EmptyTest.ViewModels.AddSectonViewModel

<div class="row mt-3">
    <div class="col-5">
        <div class="breadcrumb">
            <a class="breadcrumb-item" asp-controller="Tutorials" asp-action="Index">My Tutorials</a>
            <a class="breadcrumb-item" asp-controller="Tutorials" asp-action="@Model.TutorialId">@Model.TutorialName</a>
            <label class="breadcrumb-item">Add Section</label>
        </div>
    </div>

    <div class="col-7">
        <h4>Add Section</h4>
    </div>

    <div class="mx-auto">
        <div class="row">
            <div class="mx-auto col-12 col-sm-8 col-md-10 col-lg-8">
                <form method="post" action="/Tutorials/@Model.TutorialId/Section">
                    <div class="form-group mt-3">
                        <div class="row">
                            <div class="col-4 col-sm-3 col-md-2">
                                <label class="form-label" asp-for="AddSectionRequest.Name">Name</label>
                            </div>
                            <div class="col-8 col-sm-9 col-md-10">
                                <input class="form-control" asp-for="AddSectionRequest.Name" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <div class="row">
                            <div class="col-4 col-sm-3 col-md-2">
                                <label class="form-label" asp-for="AddSectionRequest.ShortDescription">Description</label>
                            </div>
                            <div class="col-8 col-sm-9 col-md-10">
                                <input class="form-control" asp-for="AddSectionRequest.ShortDescription" />
                            </div>
                        </div>
                    </div>
                    @if (ViewData["ValidationError"] is not null)
                    {
                        <div class="form-group text-center mt-3">
                            <span class="text-danger">@ViewData["ValidationError"]</span>
                        </div>
                    }
                    else if(ViewData["Success"] is not null) 
                    {
                        <div class="form-group text-center mt-3">
                            <span class="text-success">@ViewData["Success"]</span>
                        </div>
                    }
                    <div class="form-group mt-3" style="text-align: right;">
                        <button class="btn btn-primary" type="submit">+ Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>