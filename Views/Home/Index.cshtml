@using EmptyTest.ViewModels
@{
    ViewData["Title"] = "Tutorials";
}
@model TutorialsViewModel

<h1>Tutorials</h1>

<div class="row">
    <div class="col-12 col-sm-6">
        <div class="row mt-3">
            <div class="col-2">
                <label class="form-label">Sort by </label>
            </div>
            <div class="col-6">
                <select class="form-control">
                    <option>Price Up</option>
                    <option>Price Down</option>
                </select>
            </div>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <form method="get" asp-controller="Home" asp-action="Index">
            <div class="row mt-3">
                <div class="col-10">
                    <input asp-for="Query.S" type="text" class="form-control" placeholder="Search by title" />
                </div>
                <div class="col-2">
                    <button class="btn btn-secondary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="tutorials row">
    @foreach (var tutorial in Model.Tutorials)
    {
        <div class="col-12 col-sm-6 col-md-4 col-xl-3">
            <div class="card mt-3 card-home" onclick="redirectToPage('/Tutorials/@tutorial.Id')">
                <img class="card-img-top img-fluid" src="@tutorial.ImagePath" alt="Tutorial Image" />
                <div class="card-body">
                    <h5 class="card-title">@tutorial.Name</h5>
                    <label>@tutorial.AccountEmail</label> <br />
                    <i>@tutorial.Price zł</i>
                    <p class="card-text">@tutorial.Description</p>
                </div>
            </div>
        </div>
    }
</div>

